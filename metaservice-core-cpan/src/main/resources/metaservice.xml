<metaservice>
    <moduleInfo>
        <groupId>${pom.groupId}</groupId>
        <artifactId>${pom.artifactId}</artifactId>
        <version>${pom.version}</version>
    </moduleInfo>

    <repository
            name="cpan"
            starturi="http://cpan.inode.at/modules/01modules.index.html"
            crawler="cpan"
            />

    <crawler id="cpan">
        <follow endsWith="/">
            <fetch endsWith=".meta"/>
        </follow>
    </crawler>

</metaservice>