<div class="row">
    <div class="col-md-12">
        {{> button_controls}}
        <h1 data-provenance="[{{ms:id}}][cve:cveId][{{cve:cveId}}]">{{cve:cveId}}</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>Common Vulnerabilities and Exposures</li>
            <li class="active">{{cve:cveId}}</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <pre data-provenance="[{{ms:id}}][{cve:summary][{{cve:summary}}]">{{cve:summary}}</pre>
        <h2>Affected Products</h2>
        <ul>
            {{#eachArray cve:vulnerableSoftware}}
                <li> <a href="{{uri this}}">{{text dc:title}}</a> </li>
            {{/eachArray}}
        </ul>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h4 class="panel-title">Dates</h4></div>
            <table class="table">
                <tr data-provenance="[{{ms:id}}][cve:publishedDatetime][{{cve:publishedDatetime}}]"><th>Published</th><td>{{date cve:publishedDatetime}}</td></tr>
                <tr data-provenance="[{{ms:id}}][cve:exploitPublishedDatetime][{{cve:exploitPublishedDatetime}}]"><th>Exploit Published</th><td>{{date cve:exploitPublishedDatetime}}</td></tr>
                <tr data-provenance="[{{ms:id}}][cve:discoveredDatetime][{{cve:discoveredDatetime}}]"><th>Dicovered</th><td>{{date cve:discoveredDatetime}}</td></tr>
                <tr data-provenance="[{{ms:id}}][cve:disclosureDatetime][{{cve:disclosureDatetime}}]"><th>Disclosured</th><td>{{date cve:disclosureDatetime}}</td></tr>
                <tr data-provenance="[{{ms:id}}][cve:lastModifiedDatetime][{{cve:lastModifiedDatetime}}]"><th>Last Modified</th><td>{{date cve:lastModifiedDatetime}}</td></tr>
            </table>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading"><h4 class="panel-title">File Information</h4></div>
            <table class="table">
                <tr><th>Filename</th><td>{{> copyInputField  ms-deb:filename}}</td></tr>
                <tr><th>MD5sum</th><td>{{> copyInputField ms-deb:md5sum}}</td></tr>
                <tr><th>SHA-1sum</th><td>{{> copyInputField  ms-deb:sha1sum}}</td></tr>
                <tr><th>SHA-256sum</th><td>{{> copyInputField  ms-deb:sha256sum}}</td></tr>
            </table>
        </div>
    </div>
</div>
